<h1>任務列表</h1>

<%= notice %>
<br>
<%= link_to "新增任務", new_mission_path %>
<br>
<tr>
  <td>任務名稱</td>
  <td>任務內容</td>
</tr>
<br>
<% @missions.each do |mission| %>
<tr>
  <td><%= mission.title %></td>
  <td><%= mission.content %></td>
  <td>
    <%= link_to "編輯", edit_mission_path(mission) %>
    <%= link_to "刪除", mission_path(mission), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %>
  </td>
  <br>
</tr>
<% end %>
