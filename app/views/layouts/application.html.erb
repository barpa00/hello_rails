<!DOCTYPE html>
<html>
  <head>
    <title>HelloRails</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'wind', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <div>
      <%= render "common/navbar" %>
      <% if notice%>
        <div class="w-full bg-yellow-100 px-8 py-4 rounded-md text-gray-500">
          <%= notice %>
        </div>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
