<h1 class="py-4 px-8"><%= t("add_user")%></h1>
<%= form_for @user, url: admin_users_path, method: 'post' do |f| %>
<div class="flex flex-col gap-4 justify-center px-8" >
  <div>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <%= f.submit t("button.submit"), class:'px-4 py-2 rounded-md text-white bg-blue-500 block w-1/12' %>
</div>
<% end %>

