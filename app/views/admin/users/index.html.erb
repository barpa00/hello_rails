<button class="mx-8 my-4"><%= link_to "新增使用者" , new_admin_user_path %></button>
<% if @user&.errors&.any? %>
  <% @user.errors.full_messages.each do |error| %>
    <%= error %>
  <% end %>
<% end %>

<div class="grid grid-cols-4 divide-x-2 border-y-2 mx-8 h-12">
  <div class="flex items-center justify-center text-lg font-bold">使用者信箱</div>
  <div class="flex items-center justify-center text-lg font-bold">任務總數</div>
  <div class="flex items-center justify-center text-lg font-bold">角色</div>
  <div class="flex items-center justify-center text-lg font-bold">操作</div>
</div>

<% @users.each do |user| %>
  <ul class="grid grid-cols-4 divide-x-2 border-b-2 mx-8">
    <li class="flex items-center justify-center text-blue-500"><%= link_to user.email, admin_user_path(user) %></li>
    <li class="flex items-center justify-center"><%= user.missions.size %></li>
    <li class="flex items-center justify-center"><%= user.roles %>
    <li class="flex gap-2 items-center justify-center">
      <button class="px-4 py-2 bg-blue-500 text-white rounded-md my-2"><%= link_to "編輯", edit_admin_user_path(user) %></button>
      <button class="px-4 py-2 bg-red-600 text-white rounded-md my-2"><%= link_to "刪除", admin_user_path(user), data: { turbo_method: :delete } %></button>
    </li>
  </ul>
<% end %>