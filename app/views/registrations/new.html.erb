<h1 class="py-4 px-8">使用者註冊</h1>

<%= form_for @user, url: sign_up_path, method: 'post' do |f| %>
  <div class="flex flex-col gap-4 justify-center pl-8 w-80" >
    <div class="flex justify-between">
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>
    <div class="flex justify-between">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <div class="flex justify-between">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
    </div>
    <button class="w-1/4 ml-auto"><%= f.submit t("button.submit") %></button>
  </div>
<% end %>
